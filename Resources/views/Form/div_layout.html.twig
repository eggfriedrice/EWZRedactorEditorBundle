{% block ewz_redactor_editor_widget %}
    {% spaceless %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    {{ ewz_include_redactor_editor() }}
    <script type="text/javascript">
        $(function () {
            $('#{{ id }}').redactor({{ redactor_settings|json_encode|raw }});
        }());
    </script>
    {% endspaceless %}
{% endblock %}
